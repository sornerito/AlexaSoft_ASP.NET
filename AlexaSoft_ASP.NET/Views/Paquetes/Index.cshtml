@model IEnumerable<AlexaSoft_ASP.NET.Models.Paquete>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th scope="col" style="width: 60%;">IdServicio</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var item in Model)
        {
            <tr>
                <td scope="col" style="width: 10%;">@item.Nombre</td>
                <td scope="col" style="width: 20%;">@item.Descripcion</td>
                <td class="text-center px-3">
                    <p class="m-0">
                        Estado:

                        <div class="form-check form-switch d-inline-block">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" @(item.Estado == "Activo" ? "checked" : "") onchange="cambiarEstado('@item.IdPaquete')">
                        </div>

                    </p>
                </td>
                <td scope="col" style="width: 60%;">
                    <p>
                        @string.Join(", ", item.PaquetesServicios.Select(Ps => Ps.IdServicioNavigation.Nombre))
                    </p>

                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaquete">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaquete">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPaquete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    function cambiarEstado(idRol) {
        $.ajax({
            url: '@Url.Action("CambiarEstado", "Paquetes")',
            type: 'POST',
            data: { idpaquete: idRol },
            success: function (data) {
            },
            error: function (xhr, status, error) {
            }
        });
    }
</script>
