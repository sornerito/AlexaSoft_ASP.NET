@model AlexaSoft_ASP.NET.Models.Servicio

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Servicio</h1>

<h3>Deseas eliminar este Servicio?</h3>
<div class="container bordeVino px-4">
    <h4>Servicio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TiempoMinutos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TiempoMinutos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdServicio" />
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
