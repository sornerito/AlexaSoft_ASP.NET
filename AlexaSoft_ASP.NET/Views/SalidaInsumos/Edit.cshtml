@model AlexaSoft_ASP.NET.Models.SalidaInsumo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <div onclick="volver()" class="text-center">
                <i class="fa fa-angle-left fa-3x clickeable"></i>
            </div>
        </div>
        <div class="col-6">
            <h1 class="text-center">Editar Salida Insumo</h1>
        </div>
        <div class="col-3">
        </div>
    </div>
</div>
<hr />
<div class="container bordeVino px-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdInsumo" />
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label"></label>
                <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRetiro" class="control-label"></label>
                <input asp-for="FechaRetiro" class="form-control" />
                <span asp-validation-for="FechaRetiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotivoAnular" class="control-label"></label>
                <input asp-for="MotivoAnular" class="form-control" />
                <span asp-validation-for="MotivoAnular" class="text-danger"></span>
            </div>
            <br />
            <div class="mb-3 row">
                <div class="text-center">
                    <input type="submit" value="Guardar" class="btn btn-lg fondoVino text-light">
                </div>
            </div>
        </form>
</div>


<script>
    //Funcion Volver
    function volver() {
        window.history.back();
    }
</script>